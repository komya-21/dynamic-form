<p id="notice"><%= notice %></p>

<h1>Forms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
    <%= hidden_field_tag 'form_id',form.id %>
      <tr>
        <td><%= form.name %></td>
        <td><%= link_to 'Show', form %></td>
        <td><%= link_to 'Edit', edit_form_path(form) %></td>
        <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <td> <%= link_to "Add Entry",new_data_entry_path(form_id: form.id) %></td>
          
       
        <td><%= link_to "All Entries",index1_data_entries_path(form_id: form.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Form', new_form_path ,class: "btn btn-primary"%>
